<!DOCTYPE html>
<html>
<head>
  <title>App</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container-fluid">
  	<p class="alert"><%= alert %></p>
    <p class="notice"><%= notice %></p>
    

<div class="navbar navbar-fluid">
        <div class="navbar-inner">
          <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-th-list"></span>
            </a>
              <a tabindex=-1 href= <%=landing_page_path%> class="brand"> <img style="width: 30px; height: 30px" src=""> SMKS</a>
          
            <div class = "nav-collapse collapse">
              <ul class="nav pull-right">

                <% if user_signed_in? %>
                  <li><a href=<%=stories_path(type: "personal")%>>My Personal Journal</a></li>
                  <% count = Story.where(user_id: current_user.id).where(status: "draft").count%>
                  <%if count > 0%> 
                    <li><a href=<%=stories_path(type: "draft")%>>Finish Drafts(<%=count%>)</a></li>
                  <%end%>
                <%end%>
                <li><a href=<%=new_story_path(type: "public")%>>Share Funny</a></li>                              
                <li><a href=<%=stories_path(type: "public")%>>Read Funny</a></li>                              
                
                <% if user_signed_in? %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                      <%=current_user.email%>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                      <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
                      <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>  
                    </ul>             
                <%else%>
                  <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Login/Sign-up
                      <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "Login", new_user_session_path %></li>  
                    <li><%= link_to "Sign up", new_user_registration_path %></li>
                  </ul>
                  <%end%>



              </ul>
            </div>
          </div>
        </div>
      </div>














    <%= yield %>
  </div>

</body>
</html>
