<h1>Edit My Story </h1>

 <img src="/images/riley.jpg" width="400"/>


<%= form_for(@current_story, url: story_path(@current_story), html: {method: "put"} ) do |f| %>

	<%= f.label :title, "Title:", for: "title" %>
	<%= f.text_field :title, id: "title" %> 

	<br>

	<%= f.label :body, "Body:", for: "body" %>
	<%= f.text_area :body, id: "body" %>

	<%= f.label :share_type%>
	<%= f.select :share_type, options_for_select(["public", "private"], @current_story.share_type)%>

	<%= f.label :status, "Status#:"%>
	<%= f.text_field :status%>

	<br>
	<%= button_tag "Update", name: "update" %>
	<%= button_tag "Save as Draft", name: "save_as_draft" %>
	<%= link_to "Cancel", story_path(@current_story)%>

<%end%>