

  <%if current_user%>
    <%default_view_preference = User.find(current_user.id).default_view_preference%>
    <%if default_view_preference == "My Friends"%>
      <%@view_preference = "shared"%>
    <%elsif default_view_preference == "My Stories"%>
      <%@view_preference = "personal"%>
    <%else%>
      <%@view_preference = "public"%>
    <%end%>
  <%else%>
    <%@view_preference = nil%>
  <%end%>


  <div class="container">
    
    <div align="middle"
     <div class="row" align="middle" >
        <div class="col-md-4" >
          <%if @image%>
            <a href=<%=stories_path(type: @view_preference)%>>
              <img src=<%=@image.s3_image_loc%> class="img-responsive img-thumbnail"/>
            </a>
          <%else%>
            <a href=<%=stories_path(type: @view_preference)%>>
              <img src="/riley.jpg" class="img-responsive img-thumbnail"/>
            </a>
          <%end%>
        </div>
      </div>

     
