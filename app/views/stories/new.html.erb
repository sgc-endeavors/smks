<h1>Create a Story</h1>

 <img src="/images/riley.jpg" width="400"/>

<%= form_for(@new_story, url: stories_path(@new_story)) do |f| %>
	<%= f.label :title, "Title:", for: "title" %>
	<%= f.text_field :title, id: "title" %> 

	<br>

	<%= f.label :body, "Body:", for: "body" %>
	<%= f.text_area :body, id: "body" %>

	<%= f.label :share_type, "Share Type:", for: "share_type" %>
	<%= f.select :share_type, options_for_select(["public", "private"], current_user.default_share_preference) %>

	<%= f.label :user_id, "User_ID:", for: "user_id" %>
	<%= f.text_field :user_id, id: "user_id" %>


	<%= button_tag "Submit", name: "submit" %>
	<%= button_tag "Save as Draft", name: "draft" %>
	<%= link_to "Cancel", stories_path%>

<%end%>