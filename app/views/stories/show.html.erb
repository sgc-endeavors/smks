<h1> Show for Story </h1>
	<%= label_tag "title", "Title:" %>
	<%= text_field_tag "title", @existing_story.title %> 
	<br>

	<%= label_tag "body", "Body:" %>
	<%= text_area_tag "body", @existing_story.body %>
	<br>

<p>Thumbs Up: <%=@ratings.where(name: 'thumbs up').count%> | Thumbs Down: <%=@ratings.where(name: 'thumbs down').count%></p>
	<%if current_user != nil%>
		<%if @rating.name != nil%>
			<p><%="You scored this a #{@rating.name}!"%></p>
		<%else%>
			<%= form_for(@rating, url: ratings_path) do |f| %> 
			 	<%= button_tag "Thumbs Up", name: "t_up", value: @existing_story.id %>	
			 	<%= button_tag "Thumbs Down", name: "t_down", value: @existing_story.id %>
		 	<%end%>
		<%end%>
	<%end%>
	<br>

	<% if can? :update, @existing_story  %>
		<%= link_to "Edit Story", edit_story_path(@existing_story) %> |
	<%end%>

	<%= link_to "Show All", stories_path %> | <%= link_to "Create Comment", new_comment_path(story_id: @existing_story.id) %>

	<br>
	<h4>Comments</h4>
	
	<%@comments.each do |comment| %>
	<%=comment.body%>	| <%=comment.user.first_name%> | <%=comment.story_id%> 
	<%if can? :update, comment %>
		| <%= link_to "Edit Comment", edit_comment_path(comment)%> 
		| <%= link_to "Delete", comment_path(comment)%>
	<%end%>
	
		<br>
	<%end%>