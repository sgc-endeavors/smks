<h4>Edit <%= resource_name.to_s.humanize %></h4>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, role:"form") do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :first_name, "First Name", for: "first_name" %>
    <div class="row">
      <div class="col-sm-4">
        <%= f.text_field :first_name, id: "first_name", class:"form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, "Last Name", for: "last_name" %>
    <div class="row">
      <div class="col-sm-4">
        <%= f.text_field :last_name, id: "last_name", class:"form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <div class="row">
      <div class="col-sm-4">  
        <%= f.email_field :email, id: "email", class:"form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :default_share_preference, "Default Share Preference", for: "default_share_preference" %>
    <%= f.select :default_share_preference, options_for_select(["public", "with friends", "private"], resource.default_share_preference), class:"form-control" %><br>
  </div>

  <div class="form-group">
    <%= f.label :default_view_preference, "Default View Preference", for: "default_view_preference" %>
    <%= f.select :default_view_preference, options_for_select(["My Stories", "My Friends", "Public"], resource.default_view_preference) , class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i><small>(We need this to save your changes)</i></small><br />
    <div class="row">
      <div class="col-sm-4">  
        <%= f.password_field :current_password, id: "current_password", class:"form-control"%><br />
      </div>
    </div>
  </div>

  <b><u>CHANGE PASSWORD</u></b><br>
  <div class="form-group">
    <%= f.label :password, "New Password" %> <i><small>(leave blank if you don't want to change it)</small></i><br />
    <div class="row">
      <div class="col-sm-4">  
        <%= f.password_field :password, id: "password", :autocomplete => "off", class:"form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <div class="row">
      <div class="col-sm-4">  
        <%= f.password_field :password_confirmation, class:"form-control" %>
      </div>
    </div>
  </div>

  <%= f.submit "Update & Save", class:"btn btn-sm btn-success" %> &nbsp; &nbsp; <%= link_to "Cancel Changes", :back %>

<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

