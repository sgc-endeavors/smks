<h4>Create a New Account (or <%=link_to "Sign In", new_user_session_path%>)</h4>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), role:"form") do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :first_name, "First Name", for: "first_name" %>
    <div class="row">
      <div class="col-sm-4">
        <%= f.text_field :first_name, id: "first_name", class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, "Last Name", for: "last_name" %>
    <div class="row">
      <div class="col-sm-4">
        <%= f.text_field :last_name, id: "last_name", class:"form-control" %>
      </div>
    </div>
  </div>
 
  <div class="form-group">
    <%= f.label :email %>
    <div class="row">
      <div class="col-sm-4">
        <%= f.email_field :email, id: "email", class:"form-control"%>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <div class="row">
      <div class="col-sm-4">
        <%= f.password_field :password, id: "password", class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <div class="row">
      <div class="col-sm-4">
        <%= f.password_field :password_confirmation, id: "password_confirmation", class:"form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <%= f.label :default_share_preference, "Default Share Preference:", for: "default_share_preference" %>
    <%= f.select :default_share_preference, options_for_select(["public", "with friends", "private"]), class:"form-control" %>
  </div>

  <div class="form-group"> 
    <%= f.label :default_view_preference, "Default View Preference:", for: "default_view_preference" %>
    <%= f.select :default_view_preference, options_for_select(["My Stories", "My Friends", "Public"], resource.default_view_preference), class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.check_box :terms, id: "terms" %>
    <%= f.label :terms, "I accept the terms and conditions", for: "terms"%>
	</div>
  <div>
    <%= f.submit "Create Account", class:"btn btn-sm btn-success" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
