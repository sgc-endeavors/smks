<h2>Create a New Account</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :first_name, "First Name", for: "first_name" %><br />
  <%= f.text_field :first_name, id: "first_name" %></div>

  <div><%= f.label :last_name, "Last Name", for: "last_name" %><br />
  <%= f.text_field :last_name, id: "last_name" %></div>
 
  <div><%= f.label :email %><br />
  <%= f.email_field :email, id: "email" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, id: "password" %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, id: "password_confirmation" %></div>

  <div><%= f.label :terms, "I accept the terms and conditions", for: "terms"%><br />
	<%= f.check_box :terms, id: "terms" %></div>

  <div><%= f.submit "Create Account" %></div>
<% end %>

<%= render "devise/shared/links" %>
