<h4>Login (or <%=link_to "Sign up", new_user_registration_path%>)</h4>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), role:"form") do |f| %>
	<div class="form-group">
	<%= f.label :email %>
  	<div class="row">
    	<div class="col-sm-4">
				<%= f.email_field :email, id: "email", class:"form-control" %>
			</div>
		</div>
  </div>

  <div class="form-group">
  	<%= f.label :password %>
  	<div class="row">
    	<div class="col-sm-4">
  			<%= f.password_field :password, id: "password", class:"form-control" %>
  		</div>
  	</div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div>
    	<%= f.check_box :remember_me %> <%= f.label :remember_me %>
    </div>
  <% end -%>
  <br>

  <div><%= f.submit "Sign in", class:"btn btn-sm btn-success"%></div>
<% end %>
<br>

<%= render "devise/shared/links" %>
